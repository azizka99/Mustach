@model MustacheEnt.ViewModel.HomeViewModel

<!doctype html>
<!-- Website Template by freewebsitetemplates.com -->
<html>
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Mustache Enthusiast</title>
	<link rel="stylesheet" type="text/css" href="~/css/style.css">
	<link rel="stylesheet" type="text/css" href="~/css/mobile.css" media="screen and (max-width : 568px)">
	<script type="text/javascript" src="~/js/mobile.js"></script>
</head>
<body>
	<div id="header">
		<a href="index.html" class="logo">
			@foreach (var item in Model.SettingsList)
			{
				<img src="~/@item.MainLogoSrc" alt="">
			}

		</a>
		<ul id="navigation">
			<li class="@(ViewData.Model.MenuPage== "Home" ?"selected" : string.Empty)">
				<a href="@Url.Action("Index", "Home")">home</a>
			</li>
			<li class="@(ViewData.Model.MenuPage== "About" ?"selected" : string.Empty)">
				<a href="@Url.Action("About", "Home")">about</a>
			</li>
			<li class="@(ViewData.Model.MenuPage== "Gallery" ?"selected" : string.Empty)">
				<a href="@Url.Action("Gallery","Gall")">gallery</a>
			</li>
			<li>
				<a href="@Url.Action("Index", "Blog")">blog</a>
			</li>
			<li class="@(ViewData.Model.MenuPage== "Contact" ?"selected" : string.Empty)">
				<a href="@Url.Action("Contact", "Home")">contact</a>
			</li>
		</ul>
	</div>
	@RenderBody()
	<div id="footer">
		<div>
			@foreach (var item in Model.SettingsList)
			{
				<p>&copy; @item.MainFooterText</p>
			}
			<ul>
				@foreach (var item in Model.SettingsList)
				{
					<li>
						<a href="@item.FooterTwitter" id="twitter">twitter</a>
					</li>
					<li>
						<a href="@item.FooterFacebook" id="facebook">facebook</a>
					</li>
					<li>
						<a href="@item.FooterGoogle" id="googleplus">googleplus</a>
					</li>
					<li>
						<a href="@item.FooterPrinterest" id="pinterest">pinterest</a>
					</li>
				}
			</ul>
		</div>
	</div>
</body>
</html>
